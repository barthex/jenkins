<?xml version='1.1' encoding='UTF-8'?>
<project>
  <actions/>
  <description>sync fork from upstream</description>
  <keepDependencies>false</keepDependencies>
  <properties/>
  <scm class="hudson.scm.NullSCM"/>
  <canRoam>true</canRoam>
  <disabled>false</disabled>
  <blockBuildWhenDownstreamBuilding>false</blockBuildWhenDownstreamBuilding>
  <blockBuildWhenUpstreamBuilding>false</blockBuildWhenUpstreamBuilding>
  <triggers>
    <hudson.triggers.TimerTrigger>
      <spec>H 5 * * *</spec>
    </hudson.triggers.TimerTrigger>
  </triggers>
  <concurrentBuild>false</concurrentBuild>
  <builders>
    <hudson.tasks.Shell>
      <command>if [ ! -d &quot;Sonoff-Tasmota&quot; ]; then
     git clone git@github.com:tedsluis/Sonoff-Tasmota.git
else
     echo &quot;repo already exists!&quot;
fi</command>
    </hudson.tasks.Shell>
    <hudson.tasks.Shell>
      <command>cd Sonoff-Tasmota
REMOTES=$(git remote -v | wc -l)
if [ &quot;$REMOTES&quot; -lt 4 ]; then
     git remote add upstream https://github.com/arendst/Sonoff-Tasmota.git
else
     echo &quot;upstream already added!&quot;
fi</command>
    </hudson.tasks.Shell>
    <hudson.tasks.Shell>
      <command>cd Sonoff-Tasmota
git fetch upstream</command>
    </hudson.tasks.Shell>
    <hudson.tasks.Shell>
      <command>cd Sonoff-Tasmota
git checkout development</command>
    </hudson.tasks.Shell>
    <hudson.tasks.Shell>
      <command>cd Sonoff-Tasmota
git merge upstream/development</command>
    </hudson.tasks.Shell>
    <hudson.tasks.Shell>
      <command>cd Sonoff-Tasmota
git push</command>
    </hudson.tasks.Shell>
    <hudson.tasks.Shell>
      <command>cd Sonoff-Tasmota
git status</command>
    </hudson.tasks.Shell>
    <hudson.tasks.Shell>
      <command>cd Sonoff-Tasmota
git checkout master</command>
    </hudson.tasks.Shell>
    <hudson.tasks.Shell>
      <command>cd Sonoff-Tasmota
git merge upstream/master</command>
    </hudson.tasks.Shell>
    <hudson.tasks.Shell>
      <command>cd Sonoff-Tasmota
git push</command>
    </hudson.tasks.Shell>
    <hudson.tasks.Shell>
      <command>cd Sonoff-Tasmota
git status</command>
    </hudson.tasks.Shell>
  </builders>
  <publishers/>
  <buildWrappers/>
</project>